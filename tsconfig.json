{
    "compilerOptions": {
        "module": "commonjs" ,
        "target" : "es6" ,
        "outDir" : "./server-dist" ,
        "sourceMap": true ,
        "strictNullChecks": true ,
        "baseUrl": "./server-src",
        "paths" : {
            "@common/*" : ["common/*"]
        } ,
        "noUnusedLocals": true
    } ,
    "include" : [
        "./server-src/**/*.ts"
    ]
}