<style scoped>
    .article-heading  {
        display: block;
        padding: 1.5em 0;
    }
    .article-heading > .ui.header {
        display: inline-block;
        margin-bottom: 0;
    }
    .post-meta {
        color: #cac8c8;
        font-style: italic;        
    }    
    .article-content {
        position: relative;
    }
    .article-content > .buttons {
        position: absolute;
        left: -65px;
    }
    .fixed.menu {
        visibility: hidden;
    }
    .ui.mhead.segment {
        min-height: 300px;
        background-image: url(/media/bg1.jpg);
        background-size: 100%;
        background-position: center;
    }

    .mhead .ui.header {
        margin-top: 1em;
        font-size: 4em;
    }
    .ui.post.segment {
        padding: 4em 0;
        border: none;
    }

    #fixedMenu {
        border: none;
        box-shadow: none;
        background: none;
    }
    #fixedMenu a {
        font-weight: bold;
    }
    body, p {
        font-size: 18px;
    }

    @media only screen and (max-width:700px) {
        .mhead.segment {
            min-height: 200px;
        }
        .mhead .ui.header {
            margin-top: 0.5em;
            font-size: 3em;
        }
        .ui.mhead.segment {
            background-size: initial;
        }
    }
</style>

<script>
    $(function(){
        var $fixedMenu = $('.fixed.menu')
        $('.mhead').visibility({
            once : false ,
            onBottomPassed: function() {
                $fixedMenu.transition('fade in')
            } ,
            onBottomPassedReverse: function() {
                $fixedMenu.transition('fade out')
            }
        })
        $('.article-content table').addClass('ui collapsing table')
    })
</script>

<div class="ui inverted vertical left aligned segment mhead">

    <div class="ui borderless inverted menu" id="fixedMenu">
        {{> top-menu}}
    </div>    

    <div class="ui text container">
        <h1 class="ui inverted header">
            {{$blogTitle}}
        </h1>
        <h2>{{$blogSubtitle}}</h2>
    </div>
</div>

<div>
    {{#each itens}}
    <div class="ui vertical post borderless segment">
        <div class="ui text container">
            <div class="article-heading">                
                <h1 class="ui header">{{title}}</h1>
                <div class="post-meta">{{userDisplayName}} em {{formattedDate}}</div>
            </div>
            <div class="article-content">
                <div class="buttons">
                    {{#if @root.$online}}
                    <a href="/pages/article/{{id}}/edit">
                        <div class="ui icon button">
                            <i class="edit icon"></i>
                        </div>
                    </a>
                    {{/if}}
                </div>
                {{{content}}}
            </div>
        </div>
    </div>
    {{/each}}
</div>